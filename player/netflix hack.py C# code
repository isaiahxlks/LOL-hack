using System;
using System.Collections.Generic;
using System.Net.Http;
using System.Threading.Tasks;

public class NetflixAccountGenerator
{
    private readonly HttpClient _httpClient;

    public NetflixAccountGenerator()
    {
        _httpClient = new HttpClient();
    }

    public async Task GenerateAccount(string email, string password)
    {
        // Create a new account
        var createResponse = await _httpClient.PostAsync("https://api.netflix.com/account/create", new FormUrlEncodedContent(new Dictionary<string, string>
        {
            { "email", email },
            { "password", password }
        }));

        if (!createResponse.IsSuccessStatusCode)
        {
            Console.WriteLine("Failed to create account. Please try again.");
            return;
        }

        Console.WriteLine("Account created successfully!");

        // Wait for 5 seconds to allow the account to be verified
        await Task.Delay(5000);

        // Verify the account
        var verifyResponse = await _httpClient.GetAsync($"https://api.netflix.com/account/verify/{email}?code=123456"); // Hypothetical verification code

        if (verifyResponse.IsSuccessStatusCode)
        {
            Console.WriteLine("Account verified successfully!");
            Console.WriteLine($"Email: {email}");
            Console.WriteLine($"Password: {password}");
        }
        else
        {
            Console.WriteLine("Failed to verify account. Please try again with a different email address.");
        }
    }
